#include "main.h"
#include <stdio.h>

/**
 * rev_string - reverses a string
 * @s: string to be reversed
 */

void puts_half(char *str)
{
	int i, len, n;

	len = 0;

	while (str[len] != '\0')
	{
		len++;
	}

	if (len % 2 != 0)
	{
		n = (len - 1) / 2;
	}else
	{
		n = len / 2;
	}

	for (i = 0; i < n; i++)
	{
		_putchar(str[i + n]);
	}

	_putchar('\n');
	
}
